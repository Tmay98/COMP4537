{
  "swagger": "2.0",
  "info": {
    "title": "Quiz API",
    "description": "Quiz API",
    "version": "v1"
  },
  "paths": {
    "/quiz": {
      "get": {
        "summary": "Returns a list of questions.",
        "description": "Returns a list of questions.",
        "responses": {
          "200": {
            "examples": {
              "application/json" : {
                "id": 1,
                "question": "bro",
                "a1": "1",
                "a2": "2",
                "a3": "3",
                "a4": "4"
              }
            },
            "description": "A JSON array of questions"
          },
          "404":{
            "description": "404 not found"
          }
        }
      }
    },
    "/quiz/{questions}": {
      "post": {
        "summary": "posts a new question.",
        "description": "Posts a new question.",
        "responses": {
          "200": {
            "examples": {
              "application/json" : {
                "id": 1,
                "question": "random question",
                "answer1": "wrong",
                "answer2": "wrong2",
                "answer3": "correct",
                "answer4": "wrongagain",
                "answerindex": 3
              }
            },
            "description": "A JSON array of questions"
          },
          "404":{
            "description": "404 not found"
          }
        }
      }
    },
    "/quiz/{questionNumber}": {
      "delete": {
        "summary": "deletes a question of given number.",
        "description": "Returns a list of questions.",
        "responses": {
          "200": {
            "examples": {
              "application/json" : {
                "id": 1,
                "question": "bro",
                "a1": "1",
                "a2": "2",
                "a3": "3",
                "a4": "4"
              }
            },
            "description": "A JSON array of questions"
          },
          "404":{
            "description": "404 not found"
          }
        }
      }
    }
  }
}
